                                <th>@Html.DisplayNameFor(model => model.Users.First().UserId)</th>
                                <th>@Html.DisplayNameFor(model => model.Users.First().Username)</th>
                                <th>@Html.DisplayNameFor(model => model.Users.First().FirstName)</th>
                                <th>@Html.DisplayNameFor(model => model.Users.First().LastName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
