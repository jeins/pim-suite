                    <form class="form-signin">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Domains.First().DomainId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Domains.First().DomainName)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
